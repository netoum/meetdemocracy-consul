<div class="top-links">
  <%= render Layout::LocaleSwitcherComponent.new %>

  <%= link_to root_path do %>
    <%= t("admin.dashboard.index.back", org: setting["org_name"]) %>
  <% end %>
</div>
<header class="govuk-header" role="banner"
  data-module="govuk-header">
  <div class="govuk-header__container govuk-header__container--full-width">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-one-thirds">
        <div class="govuk-header__logo">
          <a href="<%= root_path %>" class="govuk-header__link govuk-header__link--homepage">
            <span class="govuk-header__logotype header-logo">
              <span class="govuk-header__logotype-text">
                <%= setting["org_name"] %>
              </span>
            </span>
            <span class="govuk-tag">
              <%= namespaced_header_title %>
            </span>
          </a>
        </div>
      </div>
      <% if show_account_menu? %>

      <div class="govuk-grid-column-two-thirds">
        <nav aria-label="Menu" class="govuk-header__navigation float large-right">
          <button type="button" class="govuk-header__menu-button govuk-js-header-toggle" aria-controls="navigation"
            aria-label="Show or hide menu" hidden>Menu</button>
          <ul id="navigation" class="govuk-header__navigation-list">
            <%= render Layout::AccountMenuComponent.new(user) %>
          </ul>
        </nav>
      </div>
          <% end %>

    </div>
  </div>
</header>
