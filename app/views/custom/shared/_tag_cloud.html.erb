<div id="tag-cloud">
  <div class="sidebar-divider"></div>
  <h2 class="sidebar-title"><%= t("shared.tags_cloud.tags") %></h2>
  <br>
  <ul class="no-bullet">
    <% @tag_cloud.tags.each do |tag| %>
      <li class="inline-block">
        <%= link_to polymorphic_path(taggable.constantize, search: tag.name) do %>
          <span class="govuk-tag govuk-tag--grey"><%= tag.name %></span>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<%= render SDG::Goals::TagCloudComponent.new(taggable) %>
