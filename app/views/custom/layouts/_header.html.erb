<header class="govuk-header " role="banner" data-module="govuk-header">
  <div class="govuk-header__container govuk-width-container">
    <div class="govuk-header__logo">
      <%= link_to root_path, accesskey: "0", class:"govuk-header__link govuk-header__link--homepage" do %>
      <span class="govuk-header__logotype">
        <span class="govuk-header__logotype-text">
          <%= image_tag(image_path_for("logo_header.png"), alt: setting["org_name"]) %>
        </span>
      </span>
      <% end %>
    </div>
    <div class="govuk-header__content">
      <nav aria-label="Menu" class="govuk-header__navigation ">
        <button type="button" class="govuk-header__menu-button govuk-js-header-toggle" aria-controls="navigation"
          aria-label="Show or hide menu" hidden>Menu</button>
        <%= render Layout::AccountMenuComponent.new(current_user) %>
      </nav>
    </div>
  </div>

</header>
