<!DOCTYPE html>
<html <%= common_html_attributes %>>
  <head>
    <%= render "layouts/common_head", default_title: setting["org_name"] %>
    <%= render "layouts/meta_tags" %>
    <%= raw setting["html.per_page_code_head"] %>
  </head>

  <body class="auth-page public">
    <%= render 'cookies_eu/consent_banner', link: '/privacy', target: '_blank' unless current_user&.cookies_accepted %>

    <%= raw setting["html.per_page_code_body"] %>

    <div class="wrapper">
      <header>
      <div class="top-bar small-12 column center">
        <h1 class="logo margin">
          <%= link_to root_path do %>
            <%= image_tag(image_path_for("logo_header.png"), class: "float-left", alt: setting["org_name"]) %>
          <% end %>
        </h1>
      </div>
    </header>
  </div>
  <div class="wrapper">

        <div class="row">

          <div class="medium-6 column hide-for-small-only">
      <%= image_tag(image_path_for("devise.png"), style:"margin-top: 50%; margin-bottom:50%;") %>
          </div>

      <div class="small-12 medium-6 column ">

            <div class="auth-form margin">
              <%= render "layouts/flash" %>

              <%= yield %>
            </div>
          </div>
        </div>
  </div>

    <div class="footer">
      <%= render Layout::FooterComponent.new %>
    </div>
  </body>
  <%= render "layouts/cookies" unless current_user&.cookies_accepted %>
</html>
